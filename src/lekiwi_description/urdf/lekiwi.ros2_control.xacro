<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <ros2_control name="lekiwi_base" type="system">

    <!-- Hardware interface using waveshare_servos -->
    <hardware>
      <plugin>waveshare_servos/WaveshareServos</plugin>
      <param name="usb_port">/dev/ttyACM0</param>
      <param name="baud_rate">1000000</param>
    </hardware>

    <!-- Left wheel servo (ID: 7) -->
    <joint name="left_wheel_joint">
      <param name="id">7</param>
      <param name="type">vel</param>
      <command_interface name="velocity">
        <param name="min">-10.0</param>
        <param name="max">10.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="torque"/>
      <state_interface name="temperature"/>
    </joint>

    <!-- Rear wheel servo (ID: 8) -->
    <joint name="rear_wheel_joint">
      <param name="id">8</param>
      <param name="type">vel</param>
      <command_interface name="velocity">
        <param name="min">-10.0</param>
        <param name="max">10.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="torque"/>
      <state_interface name="temperature"/>
    </joint>

    <!-- Right wheel servo (ID: 9) -->
    <joint name="right_wheel_joint">
      <param name="id">9</param>
      <param name="type">vel</param>
      <command_interface name="velocity">
        <param name="min">-10.0</param>
        <param name="max">10.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="torque"/>
      <state_interface name="temperature"/>
    </joint>

  </ros2_control>

</robot>
